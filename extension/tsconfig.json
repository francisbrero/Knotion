{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "outDir": "./dist",
    "baseUrl": "../",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "lib": ["DOM", "ES2020"]
  },
  "include": [
    "src/**/*",
    "../serviceAccount.json"
  ],
  "exclude": ["node_modules"]
} 